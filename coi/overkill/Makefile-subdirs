# This file is to be included in other Makefiles.  The include should be
# preceded by a definition of DIRS, the list of subdirectories.

all:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) ; \
	cd ..) ; \
	done

fasl:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) fasl ; \
	cd ..) ; \
	done

fas:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) fas ; \
	cd ..) ; \
	done

o:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) o ; \
	cd ..) ; \
	done

sparcf:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) sparcf ; \
	cd ..) ; \
	done

ufsl:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) ufsl ; \
	cd ..) ; \
	done

x86f:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) x86f ; \
	cd ..) ; \
	done

dfsl:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) dfsl ; \
	cd ..) ; \
	done

clean:
	@for dir in $(DIRS) ; \
	do \
	(cd $$dir ; \
	$(MAKE) clean ; \
	cd ..) ; \
	done
